<?xml version='1.0' encoding='utf-8'?>
<widget id="com.acaric.ios.AcaricOfficialApp1" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>mobile-app-demo3</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="info@acaric.jp" href="https://acaric.jp">
        Acaric Co., Ltd.
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="_WEBAPP_HREF_/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="res/android/icon-a-48.png" density="mdpi" />
        <icon src="res/android/icon-a-72.png" density="hdpi" />
        <icon src="res/android/icon-a-96.png" density="xhdpi" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <icon src="res/ios/icon-a-120.png" width="120" height="120" />
        <icon src="res/ios/icon-a-180.png" width="180" height="180" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.1.1" />
    <engine name="android" spec="~5.1.1" />
</widget>
